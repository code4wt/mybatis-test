<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.coolblog.chapter4.dao.AuthorDao">
    <insert id="insertMany" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
            author (`name`, `age`, `sex`, `email`)
        VALUES
        <foreach item="author" collection="list" separator=",">
            (#{author.name}, #{author.age}, #{author.sex}, #{author.email})
        </foreach>
    </insert>
</mapper>